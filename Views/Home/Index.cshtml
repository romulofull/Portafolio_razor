@model Portafolio.Models.HomeIndexViewModel

@{
    ViewData["Title"] = "Portafolio";
}

<partial name="_Presentacion" />
<partial name="_Habilidades" />

@if (Model.Proyectos is not null && Model.Proyectos.Any())
{
    <div class="text-center color" style="padding-top: 3rem;">
        <h1>Mis Trabajos recientes</h1>
        <p>Aquí puedes ver mis trabajos:</p>
    </div>
    <div class="fondo color">
    <div class="container color">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var proyecto in Model.Proyectos)
            {
                <div class="col">
                    <div class="card shadow-sm border-light rounded">
                        <img src="@proyecto.ImagenURL" class="card-img-top" alt="Imagen del proyecto" style="object-fit: cover; height: 200px;"  />

                        <div class="card-body">
                            <h5 class="card-title">@proyecto.Titulo</h5>
                            <p class="card-text">@proyecto.Descripcion</p>
                        </div>
                        <div class="card-footer text-center">
                            <a class="btn color" href="@proyecto.Link" target="_blank" rel="noopener noreferrer">Visitar</a>
                        </div>
                    </div> 
                </div> 
            } 
        </div> 
    </div> 
    </div>
}
else
{
    <div class="text-center">
        <h3>No hay proyectos disponibles en este momento.</h3>
    </div>
}
